{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*",
        "./src/*"
      ],
      "@/*": [
        "./src/*",
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "jest",
      "@nuxt/types",
      "@vue/types"
    ]
  },
  "exclude": [
    "node_modules/*",
    "models",
    ".nuxt",
    "dist",
    "cypress"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue"]
}
